#!/usr/bin/env bash
set -o errexit -o nounset -o pipefail

if [ "${DEBUG:=false}" = "true" ]; then
  set -o xtrace
fi

usage() {
  echo "usage: $(basename $0) PACKER_TEMPLATE [vmware|virtualbox|parallels]"
  echo
  echo "Build a box"
}

args() {
  if [ $# -lt 1 ]; then
    usage
    exit 0
  fi

  packer_template=$1
  if [ ! -f ${packer_template} ]; then
    packer_template="${packer_template}.json"
    if [ ! -f ${packer_template} ]; then
      echo "$(basename $0): Invalid template file ${packer_template}"
      exit 127
    fi
  fi

  only=${2:-}
  if [[ -n ${only} ]]; then
    if [[ ! $only =~ ^(vmware|virtualbox|parallels)$ ]]; then
      echo "$(basename $0): illegal platform $2"
      echo "Valid platforms: vmware|virtualbox|parallels"
      usage
      exit 1
    fi
  fi

  if [[ "${only}" = "vmware" ]]; then
    only=vmware-iso
  elif [[ "${only}" = "virtualbox" ]]; then
    only=virtualbox-iso
  elif [[ "${only}" = "parallels" ]]; then
    only=parallels-iso
  fi

  if [ -n "${only}" ]; then
    only="-only=${only}"
  fi
}

# main
args "$@"

version=$(cat VERSION)
packer build ${only} -var "version=${version}" ${packer_template}

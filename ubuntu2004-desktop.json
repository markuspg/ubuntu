{
  "_comment": "Build with `packer build ubuntu2004-desktop.json`",
  "builders": [
    {
      "boot_command": [
        "<enter><enter><f6><esc><wait>",
        "autoinstall ds=nocloud-net;s=http://{{ .HTTPIP }}:{{ .HTTPPort }}/",
        "<enter>"
      ],
      "boot_wait": "5s",
      "cpus": "{{ user `cpus` }}",
      "disk_size": "{{ user `disk_size` }}",
      "guest_os_type": "ubuntu-64",
      "headless": "{{ user `headless` }}",
      "http_directory": "./http",
      "iso_checksum": "{{ user `iso_checksum_type` }}:{{ user `iso_checksum` }}",
      "iso_urls": [
        "{{ user `iso_path` }}/{{ user `iso_name` }}",
        "{{ user `iso_url` }}"
      ],
      "memory": "{{ user `memory` }}",
      "output_directory": "output-{{ user `vm_name` }}-vmware-iso",
      "shutdown_command": "echo '{{ user `ssh_password` }}' | sudo -S shutdown -P now",
      "ssh_handshake_attempts": "200",
      "ssh_password": "{{ user `ssh_password` }}",
      "ssh_timeout": "10000s",
      "ssh_username": "{{ user `ssh_username` }}",
      "type": "vmware-iso",
      "vm_name": "{{ user `vm_name` }}",
      "vmx_data": {
        "ethernet0.pciSlotNumber": "32"
      },
      "vmx_remove_ethernet_interfaces": true
    },
    {
      "boot_command": [
        "<enter><enter><f6><esc><wait>",
        "autoinstall ds=nocloud-net;s=http://{{ .HTTPIP }}:{{ .HTTPPort }}/ ",
        "<enter>"
      ],
      "boot_wait": "5s",
      "cpus": "{{ user `cpus` }}",
      "disk_size": "{{ user `disk_size` }}",
      "guest_additions_path": "VBoxGuestAdditions_{{.Version}}.iso",
      "guest_os_type": "Ubuntu_64",
      "hard_drive_interface": "sata",
      "headless": "{{ user `headless` }}",
      "http_directory": "./http",
      "iso_checksum": "{{ user `iso_checksum_type` }}:{{ user `iso_checksum` }}",
      "iso_urls": [
        "{{ user `iso_path` }}/{{ user `iso_name` }}",
        "{{ user `iso_url` }}"
      ],
      "memory": "{{ user `memory` }}",
      "output_directory": "output-{{ user `vm_name` }}-virtualbox-iso",
      "shutdown_command": "echo '{{ user `ssh_password` }}' | sudo -S shutdown -P now",
      "ssh_handshake_attempts": "200",
      "ssh_password": "{{ user `ssh_password` }}",
      "ssh_timeout": "10000s",
      "ssh_username": "{{ user `ssh_username` }}",
      "type": "virtualbox-iso",
      "vm_name": "{{ user `vm_name` }}"
    }
  ],
  "post-processors": [
    {
      "keep_input_artifact": false,
      "output": "box/{{ .Provider }}/{{ user `vm_name` }}-{{ user `version` }}.box",
      "type": "vagrant",
      "vagrantfile_template": "{{ user `vagrantfile_template` }}"
    }
  ],
  "provisioners": [
    {
      "environment_vars": [
        "DESKTOP={{ user `desktop` }}",
        "UPDATE={{ user `update` }}",
        "INSTALL_VAGRANT_KEY={{ user `install_vagrant_key` }}",
        "SSH_USERNAME={{ user `ssh_username` }}",
        "SSH_PASSWORD={{ user `ssh_password` }}",
        "http_proxy={{ user `http_proxy` }}",
        "https_proxy={{ user `https_proxy` }}",
        "ftp_proxy={{ user `ftp_proxy` }}",
        "rsync_proxy={{ user `rsync_proxy` }}",
        "no_proxy={{ user `no_proxy` }}"
      ],
      "execute_command": "echo '{{ user `ssh_password` }}' | {{ .Vars }} sudo -E -S bash '{{ .Path }}'",
      "expect_disconnect": true,
      "scripts": [
        "script/desktop.sh",
        "script/update.sh",
        "script/vagrant.sh",
        "script/sshd.sh",
        "script/vmware.sh",
        "script/virtualbox.sh",
        "{{ user `custom_script` }}",
        "script/minimize.sh",
        "script/cleanup.sh"
      ],
      "type": "shell"
    }
  ],
  "variables": {
    "cpus": "1",
    "custom_script": "custom-script.sh",
    "desktop": "true",
    "disk_size": "130048",
    "ftp_proxy": "{{ env `ftp_proxy` }}",
    "headless": "false",
    "hostname": "vagrant",
    "http_proxy": "{{ env `http_proxy` }}",
    "https_proxy": "{{ env `https_proxy` }}",
    "install_vagrant_key": "true",
    "iso_checksum": "28ccdb56450e643bad03bb7bcf7507ce3d8d90e8bf09e38f6bd9ac298a98eaad",
    "iso_checksum_type": "sha256",
    "iso_name": "ubuntu-20.04.4-live-server-amd64.iso",
    "iso_path": "./iso",
    "iso_url": "https://releases.ubuntu.com/20.04/ubuntu-20.04.4-live-server-amd64.iso",
    "memory": "1024",
    "no_proxy": "{{ env `no_proxy` }}",
    "rsync_proxy": "{{ env `rsync_proxy` }}",
    "ssh_fullname": "vagrant",
    "ssh_password": "vagrant",
    "ssh_username": "vagrant",
    "update": "false",
    "vagrantfile_template": "tpl/vagrantfile-ubuntu2004-desktop.tpl",
    "version": "0.1.0",
    "vm_name": "ubuntu2004-desktop"
  }
}
